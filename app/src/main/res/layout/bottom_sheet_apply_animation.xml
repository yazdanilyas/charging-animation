    <androidx.cardview.widget.CardView
        android:id="@+id/lockScreenView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3dp"
        android:foreground="@drawable/ripple_effect"
        app:cardCornerRadius="@dimen/_0dp"
        app:contentPadding="@dimen/_5dp"
        app:layout_constraintTop_toBottomOf="@+id/applyLabelTv">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lockScreenLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:padding="@dimen/_10dp"
            android:text="Lock screen" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/chargingScreenView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_effect"
        app:cardCornerRadius="@dimen/_0dp"
        app:contentPadding="@dimen/_5dp"
        app:layout_constraintTop_toBottomOf="@+id/lockScreenView">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:padding="@dimen/_10dp"
            android:text="Charging screen" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bothScreenView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_effect"
        app:cardCornerRadius="@dimen/_0dp"
        app:contentPadding="@dimen/_5dp"
        app:layout_constraintTop_toBottomOf="@+id/chargingScreenView">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bothLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:padding="@dimen/_10dp"
            android:text="Lock &amp; Charging Screen" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/lineSeparator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp"
        app:layout_constraintTop_toBottomOf="@+id/bothScreenView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cancelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_effect"
        app:cardCornerRadius="@dimen/_0dp"
        app:contentPadding="@dimen/_5dp"
        app:layout_constraintTop_toBottomOf="@+id/lineSeparator">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cancelLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10dp"
            android:padding="@dimen/_10dp"
            android:text="Cancel" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>