<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.SettingActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/block1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        app:cardCornerRadius="@dimen/_3dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/durationHeaderTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Animation Duration"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/durationRG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/durationHeaderTv">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/tenSecRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 seconds" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/twentySecRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 seconds" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/thirtySecRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30 seconds" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/oneMinRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 minute" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/alwaysRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Always" />

            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        app:cardCornerRadius="@dimen/_3dp"
        app:layout_constraintTop_toBottomOf="@+id/block1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/alarmHeaderTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Battery Level to ring Alaram "
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.slider.Slider
                android:id="@+id/batteryLevelSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stepSize="5.0"
                android:valueFrom="10"
                android:valueTo="100"
                app:layout_constraintTop_toBottomOf="@+id/alarmHeaderTv"
                app:thumbColor="@color/white"
                app:trackColorActive="@color/teal_700"
                app:trackColorInactive="@color/teal_200" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>